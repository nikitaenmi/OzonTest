{
  "swagger": "2.0",
  "info": {
    "title": "OzonTest Payment API",
    "description": "Payment microservice",
    "version": "1.0",
    "contact": {
      "name": "Nikitaenmi",
      "url": "https://github.com/nikitaenmi/OzonTest"
    }
  },
  "tags": [
    {
      "name": "PaymentService"
    }
  ],
  "host": "localhost:8080",
  "schemes": [
    "http",
    "https"
  ],
  "consumes": [
    "application/json"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/payments": {
      "post": {
        "summary": "Create payment",
        "description": "Create new payment with currency conversion",
        "operationId": "PaymentService_Create",
        "responses": {
          "200": {
            "description": "A successful response.",
            "schema": {
              "$ref": "#/definitions/apiPayment"
            }
          },
          "default": {
            "description": "An unexpected error response.",
            "schema": {
              "$ref": "#/definitions/rpcStatus"
            }
          }
        },
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "$ref": "#/definitions/apiCreatePaymentRequest"
            }
          }
        ],
        "tags": [
          "payments"
        ]
      }
    }
  },
  "definitions": {
    "apiCreatePaymentRequest": {
      "type": "object",
      "properties": {
        "provider": {
          "type": "string",
          "example": "tbank",
          "description": "Payment provider name"
        },
        "amount": {
          "type": "number",
          "format": "double",
          "example": 100,
          "description": "Payment amount"
        },
        "date": {
          "type": "string",
          "example": "01-01-2025",
          "description": "Payment date in YYYY-MM-DD format"
        },
        "currency": {
          "type": "string",
          "example": "USD",
          "description": "Currency code (ISO 4217)"
        }
      }
    },
    "apiPayment": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer",
          "format": "int32",
          "example": 1,
          "description": "Payment ID"
        },
        "provider": {
          "type": "string",
          "example": "tbank",
          "description": "Payment provider name"
        },
        "amount": {
          "type": "number",
          "format": "double",
          "example": 5000,
          "description": "Payment amount"
        },
        "date": {
          "type": "string",
          "example": "01-01-2025",
          "description": "Payment date"
        },
        "currency": {
          "type": "string",
          "example": "RUB",
          "description": "Currency code"
        }
      }
    },
    "protobufAny": {
      "type": "object",
      "properties": {
        "@type": {
          "type": "string"
        }
      },
      "additionalProperties": {}
    },
    "rpcStatus": {
      "type": "object",
      "properties": {
        "code": {
          "type": "integer",
          "format": "int32"
        },
        "message": {
          "type": "string"
        },
        "details": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/protobufAny"
          }
        }
      }
    }
  }
}
